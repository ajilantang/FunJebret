<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#795e5f" />
            <gradient android:angle="-90" android:startColor="#593435" android:endColor="#9a6869"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#795e5e" />
            <solid android:color="#855858"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#795e5e" />
            <gradient android:angle="-90" android:startColor="#ba8d8f" android:endColor="#855859" />
        </shape>
    </item>
</selector>